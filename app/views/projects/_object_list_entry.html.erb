<article class='row dashboard_project_entry' > 
  <div class='span6' style='overflow:hidden; max-height:500px;'>
  
    <% if project.main_picture.nil? %>
      <%#= image_tag 'upload_images_prompt.jpg' %>
      <div class="alert alert-error">
        <strong>Ouch!</strong> You don't have any pictures uploaded yet. 
        
        <p>
          Why don't you try to 
              <%= link_to "upload some pictures?", 
                      new_project_picture_url(project), 
                      :style => "font-weight:bold; color:#e95850;" %>
        </p>
      </div>
    <% else %>
      <%= image_tag project.main_picture.dashboard_image_url %>
    <% end %>
    
  </div>
  <div class='span3'>
    
    <h1><%= project.title %></h1>
    <div class='project-description'>
      <% if project.description.nil? %>
        No description yet. 
      <% else %>
        <%=  project.description[0..150] + "..." %>
      <% end %>
      
    </div>
    

    <ul class="latest-post post-statistic">
      <!-- <li class="clearfix">
        <%#= image_tag 'post-format/latest-video.png', :style => 'opacity:1 ;'%>
        <a href="#">Lorem ipsum dolor sit amet consectetur adipiscing elit</a>
        <span class="date">June 30, 2012</span>
      </li>
      <li class="clearfix">
        <%#= image_tag 'post-format/latest-standart.png', :style => 'opacity:1 ;'%>
        <a href="#">Lorem ipsum dolor sit amet</a>
        <span class="date">June 30, 2012</span>
      </li> -->
      <li class="clearfix">
        <%= link_to new_project_picture_url(project) do %>
           <%= image_tag 'post-format/latest-gallery.png', :style => 'opacity:1 ;'%>
        <% end %>
       
        <a href="#">Manage Pictures</a>
        <!-- <span class="date">June 30, 2012</span> -->
      </li>
      <!-- <li class="clearfix">
           <%= image_tag 'post-format/latest-quote.png', :style => 'opacity:1 ;'%>
           <a href="#">Lorem ipsum dolor sit amet adipiscing</a>
           <span class="date">June 30, 2012</span>
         </li> -->
      <li class="clearfix">
        
        <%= link_to edit_project_content_url(project) do %>
           <%= image_tag 'post-format/latest-aside.png', :style => 'opacity:1 ;'%>
        <% end %>
        
        
        <%= link_to "Manage Content", edit_project_content_url(project) %> 
        <!-- <span class="date">June 30, 2012</span> -->
      </li>
      
      <li class="clearfix">
        
        <%= link_to manage_featured_project_url(project) do %>
           <%= image_tag 'post-format/gallery-hover.png', :style => 'opacity:1 ;'%>
        <% end %>
        
        
        <%= link_to "Featured Project", manage_featured_project_url(project) %> 
        <!-- <span class="date">June 30, 2012</span> -->
      </li>
    </ul>
    
    <br />
    <h4>Publication Status</h4>
    
    <div  id='toggler-<%=  project.id %>' class='project-publish-button'>
      <input type="checkbox">
    </div>


  </div>
</article>
