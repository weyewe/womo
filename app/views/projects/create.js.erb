 
$(document).ready(function(){
  var $form = $("#new_object");  
  <% new_form = escape_javascript(  render :partial => "projects/new_object_form", :locals => {
            :new_object => @new_object,
            :url => projects_url 
          }) %>
  
  //  hide showLoading 
  $form.hideLoading();  
  $form.replaceWith('<%= new_form %>');  
  var $form = $("#new_object");  
  
  // show the alert (either success or fail)
  var $form_opener = $("#new_object_opener");
   
  <% if @new_object.persisted? %>
  // show notification that it is persisted
    <%# alert = escape_javascript(render :partial => "layouts/alert", :locals => {
      :success => true , 
      :text => "#{@new_object.title} is successfully created."
    }) %>
  //  hide the form 
    $form.hide(); 
    $form.clearForm(); 
  // add the entry into the table 
  
    <% new_row = escape_javascript(  render :partial => "projects/object_list_entry", :locals => { 
              :project => @new_object
            }) %>
          
    $("#project_form_wrapper").after('<%= new_row %>'); 
    $("#no_entry_notification").remove();
  
  <% else %>
    <%# alert = escape_javascript(render :partial => "layouts/alert", :locals => {
      :success => false , 
      :text => "Project Creation Failed."
    }) %> 
    $form.show(); 
  <% end %>
  
  if( $("#alert").length == 0 ){
    $("#new_object_opener").after('<%= alert %>');
  }else{
    $("#alert").replaceWith('<%= alert %>');
  }
  
  
  
  $(".datepicker").datepicker({
    format: 'dd/mm/yyyy',
    autoclose : true 
  });
  
   
  
  
});